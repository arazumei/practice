#include <stdio.h>
#define MAX 32

int m[MAX]; // Масив для збереження послідовності Фібоначчі

int main() {
    int p;
    scanf("%d", &p); // Зчитування вхідного значення від користувача
    m[1] = 2; // Базовий випадок: m[1] ініціалізовано значенням 2
    m[2] = 4; // Базовий випадок: m[2] ініціалізовано значенням 4

    // Обчислення послідовності Фібоначчі до p
    for (int i = 3; i <= p; i++) {
        m[i] = m[i - 1] + m[i - 2]; //  Обчислення наступного числа як суми двох попередніх чисел
    }

    printf("%d\n", m[p]); // Виведення p-го числа 
    return 0;
}
